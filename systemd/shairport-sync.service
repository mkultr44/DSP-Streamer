[Unit]
Description=Shairport Sync - AirPlay Receiver
After=sound.target
Requires=avahi-daemon.service
After=avahi-daemon.service

[Service]
ExecStart=/usr/bin/shairport-sync --output=alsa -- -d hw:Loopback,0,0 -c "DSP-Streamer"
User=shairport-sync
Group=shairport-sync
Restart=always

[Install]
WantedBy=multi-user.target
